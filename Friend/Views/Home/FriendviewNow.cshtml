        <a href="~/Friend/Home/Friendview" class="btn btn-secondary mb-3 btn btn-primary" id="goTop"><i class="fa fa-plus-circle"></i> 待確認好友</a>*@

    <!------------ajax---------------------------------------------------------->
    <nav class="navbar navbar-expand-lg navbar-light bg-light" align="center">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav" align="center">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <button id="myfriend" class="btn btn-warning btn-c">我的好友</button>
                    <button id="waitfriend" class="btn btn-warning btn-c">待確認好友</button>
                    <button id="blackfriend" class="btn btn-warning btn-c">黑名單</button>
                    <button id="followme" class="btn btn-warning btn-c">按我讚的人</button>
                    <button id="historysearch" class="btn btn-warning btn-c">我搜尋過的條件</button>
                </li>
            </ul>
        </div>
    </nav>
    <!----------------------------初始化------------------------------------->
    <div class="container" id="friendIndex">
        <!------------------ Hover Effect Style : Demo - 19 --------------->


        <form method="POST" action="@Url.Action("ConfirmFriend1","Home")" novalidate="novalidate" id="form" name="form" class="form1 ">
            <label for="Reason" class="badge badge-pill badge-primary contrFontsize2 "><i class="far fa-thumbs-down"></i>檢舉內容:</label>
            <textarea id="Reason" name="Reason" class="form-control" style="width:280px; height:200px"></textarea>
            <input type="button" class=" btn btn-info" id="DEMO" value="DEMO" />
            <input type="button" class="btn btn-outline-danger" name="cancel1" id="cancel1" value="取消" style="margin-left:80px" />
            <input type="hidden" id="friendID" name="friendID" value="" />
            <input type="submit" class="btn btn-outline-success" value="檢舉" />
        </form>

        @if (ViewBag.any1 == 1)
        {
            <br />
            <br />
            <br />
            <br />
            <div class="container">
                <div class="row mt-1">
                    @foreach (var friends in Model)
                    {
                        <div class="col-md-4 col-sm-6">
                            <div class="box19" style="width:320px;height:450px">

                                <img class="pic-1 imge2" style="width:100%;height:100%" src="@Url.Action("GetImageByte", "Home", new { id = friends.MemberID })" />
                                <div class="box-content">
                                    <ul class="icon">
                                        <li>
                                            <a data-blackid="@friends.MemberID" class="black" title="加入黑名單"><i class="fa fa-thumbs-down "></i></a>
                                        </li>
                                        <li>
                                            <a href="~/Friend/Home/Deletetest1/@friends.MemberID" title="刪除好友"><i class="fas fa-user-times"></i></a>
                                        </li>
                                    </ul>
                                    <ul class="icon">
                                        <li>
                                            <a href="~/Search/Home/memberDetailnew/@friends.MemberID" title="好友資料"><i class="fa fa-info"></i></a>
                                        </li>
                                        <li>
                                            <a href="~/Activity/Default/Createfri/@friends.MemberID" title="舉辦活動"><i class="fa fa-users"></i></a>
                                        </li>
                                    </ul>
                                    <h3 class="title">@friends.Name</h3>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else if (ViewBag.any1 == 0)
        {
            <div class="container">
                <div class="row mt-40">
                    <div class="col-md-4 col-sm-6">
                        <div style="width:320px;height:510px">
                            <h1>目前沒有好友</h1>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h1>test~</h1>
        }
    </div>


</body>



@section thumbsdown
    {
    <script>
        $("body").on("click", ".black", function () {
            let blackID = $(this).data("blackid");
            console.log(blackID);
            document.getElementById("friendID").value = blackID;
            document.getElementById("form").className = "form2";
        })

        document.getElementById("cancel1").addEventListener("click", function () {
            document.getElementById("form").className = "form1";
        })
        $("#DEMO").click(function () {
            $("#Reason").val("我們理念不合");
        })
    </script>
    <script>
        $('#myfriend').click(function () {

            $('#friendIndex').load('@Url.Action("PartFriendviewNow", "Home")');
            $('#myfriend').css("background-color", "#fb8a37").siblings().css("background-color", "");

        })

        $('#waitfriend').click(function () {
            $('#friendIndex').load('@Url.Action("PartFriendview","Home")');
            $('#waitfriend').css("background-color", "#fb8a37").siblings().css("background-color", "");
        })
        $('#blackfriend').click(function () {
            $('#friendIndex').load('@Url.Action("PartBlack","Home")');
            $('#blackfriend').css("background-color", "#fb8a37").siblings().css("background-color", "");

        })
        $('#followme').click(function () {
            $('#friendIndex').load('@Url.Action("PartFollow", "Home")');
            $('#followme').css("background-color", "#fb8a37").siblings().css("background-color", "");
        })

        $('#historysearch').click(function () {
            $('#friendIndex').load('@Url.Action("PartSearchDetail", "Home")');
            $('#historysearch').css("background-color", "#fb8a37").siblings().css("background-color", "");
        })
    </script>
}

